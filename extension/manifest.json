{
  "manifest_version": 2,
  "name": "amazon-music-remote-controller-extension",
  "version": "1.0.0",
  "content_scripts": [
    {
      "matches": ["*://music.amazon.com.br/*"],
      "js": ["remote-controller.js"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "browser_style": true,
    "chrome_style": true
  },
  "permissions": ["storage"]
}
